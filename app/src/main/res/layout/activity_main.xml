<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <ImageView
        android:id="@+id/activity_main__img__principal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/d_coca"
        app:layout_constraintBottom_toTopOf="@id/activity_main__label__payment_cash"
        app:layout_constraintStart_toStartOf="@id/activity_main__label__payment_cash"
        app:layout_constraintEnd_toEndOf="@id/activity_main__label__payment_cash"/>

    <TextView
        android:id="@+id/activity_main__label__payment_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarjeta"
        android:textSize="24sp"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/activity_main__label__payment_cash"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_main__label__payment_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Efectivo"
        android:textSize="24sp"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_main__label__payment_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CupÃ³n"
        android:textSize="24sp"
        android:padding="14dp"
        app:layout_constraintStart_toEndOf="@id/activity_main__label__payment_cash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>